{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*",
        "bin/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "tests"
    ]
}